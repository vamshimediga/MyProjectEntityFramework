@model EntitiesViewModel.LeadViewModel

<h4>Edit Lead</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        @Html.AntiForgeryToken()

        @using (Html.BeginForm("Edit", "Lead", FormMethod.Post, new { id = "editLeadForm", @class = "form", area = "Admin" }))
        {
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                @Html.LabelFor(model => model.LeadID, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.LeadID, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FirstName, new { @class = "control-label" })
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName, new { @class = "control-label" })
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index" asp-area="YourArea">Back to List</a>
</div>
