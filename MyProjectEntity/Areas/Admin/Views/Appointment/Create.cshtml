@model EntitiesViewModel.AppointmentViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>AppointmentViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Appointment", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="text-danger">
                @Html.ValidationSummary(true)
            </div>

            @Html.HiddenFor(model => model.AppointmentID) <!-- Hidden Field -->

            <div class="form-group">
                @Html.LabelFor(model => model.PatientID, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.PatientID, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PatientID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AppointmentDate, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.AppointmentDate, new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.AppointmentDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DoctorName, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.DoctorName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DoctorName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
