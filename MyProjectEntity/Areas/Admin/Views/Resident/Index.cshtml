@model IEnumerable<EntitiesViewModel.ResidentViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<a href="@Url.Action("Create", "Resident", new { area = "Admin" })">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ResidentID)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Age)</th>
            <th>@Html.DisplayNameFor(model => model.ApartmentID)</th>
            <th>
                <input type="checkbox" id="toggleApartmentColumn" checked />
                @Html.DisplayNameFor(model => model.Apartment.ApartmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ResidentID)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>@Html.DisplayFor(modelItem => item.ApartmentID)</td>
                <td class="apartment-name">@Html.DisplayFor(modelItem => item.Apartment.ApartmentName)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ResidentID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ResidentID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ResidentID })
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- jQuery Script -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Initially set visibility based on checkbox state
        $(".apartment-name").toggle($("#toggleApartmentColumn").prop("checked"));

        // Toggle visibility on checkbox change
        $("#toggleApartmentColumn").change(function () {
            $(".apartment-name").toggle(this.checked);
        });
    });
</script>
