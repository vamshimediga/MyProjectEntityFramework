@model IEnumerable<EntitiesViewModel.CompanyTypeViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyTypeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyTypeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyTypeName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.CompanyTypeID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CompanyTypeID }) |
