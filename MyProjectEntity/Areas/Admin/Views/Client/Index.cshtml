@model IEnumerable<EntitiesViewModel.ClientViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<a href="@Url.Action("Create", "Client", new { area = "Admin" })">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LawyerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lawyer.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaseType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LawyerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lawyer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CaseType)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ClientID }) |
               
                    @Html.ActionLink("Delete", "Delete", new { id = item.ClientID })
                </td>
            </tr>
        }
    </tbody>
</table>
